footer
  width 100%
  height auto
  padding 1vw 0 1vw 0
  background-color white

p.footer-text
  text-align center
  font-size 1rem
  color black
  font-weight 900

.footer
  position relative
  display flex
  flex-wrap wrap
  justify-content center
  align-items center
  align-content center
  width 100%
  height auto
  z-index 1
  background-color #2fc1c1

  &-top
    display flex
    flex-wrap nowrap
    justify-content space-between
    align-items flex-end
    width 60%
    height 80%
    padding 3vw 0 3vw 0
    color white

.footer-top-left ul
  text-align right
  list-style-type none
  color white

.footer-top-left ul li
  margin-bottom 1vw
  color #fff

.footer-top-left ul a
  text-decoration none
  font-weight lighter

img.Logo_Footer
  display inline
  height auto
  width 70%

img.social_icon
  height 30px
  width 30px
  margin-right .3vw

li.menu-title
  color white
  font-weight bold

.footer-bottom
  position relative
  display flex
  flex-wrap wrap
  justify-content center
  align-items center
  align-content center
  width 100%
  height auto
  padding 0vw 0 0vw 0
  z-index 1
  color #fff
  background-color #434745

  span.footer-text
    padding .5vw 0 .5vw 0
    font-size 16px


@media (min-width 1680px)
  p.footer-text
    font-size 2rem

  .name
    font-size 22px

  .services-elem span
    font-size 26px

  .footer-top-left ul a li,.footer-top-right span
    font-size 20px

@media (max-width 1366px)
  .footer-top-left ul a li,.footer-top-right span
    font-size 18px

@media (max-width 1024px)
  .footer-top
    width 85%

  .footer-top-left ul a li,.footer-top-right span
    font-size 16px

@media (max-width 768px)
  footer
    padding 1.5vw 0 1.5vw 0

  p.footer-text
    text-align center
    font-size .8rem

  .footer-top-left ul
    margin 0


@media (max-width 480px)
  p.footer-text
    font-size .6rem

@media (max-width 320px)
  .footer-top
    width 95%
    font-size 11px
