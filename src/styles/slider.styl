  .touch-slider {
    width: 100%;
    height: 39vw;
    position: relative;
  }

  .touch-slider .arrow-left,
  .touch-slider .arrow-right {
  	position: absolute;
    top: 0;
    bottom: 0;
    margin: auto;
    width: 25px;
    height: 50px;
  	z-index: 2;
    color rgb(47,193,193)
    font-size: 40px;

  }

  .touch-slider:hover > .arrow-left,
  .touch-slider:hover > .arrow-right { opacity: 1; transition: all 0.7s ease;  }

  .arrow-right{
    right: 2%;
  }

  .arrow-left{
    left: 2%;
  }

  .arrow-right:hover,.arrow-left:hover{
    color:rgb(182,215,130);
    cursor: pointer;
  }

  .swiper-container {
    height: 39vw;
    width: 100%;
  }

  .content-slide {
    color: #fff;
  }

  .content-slide .content-image {
  	position: absolute;
  	z-index: -1;
  }

  .swiper-slide img {
      width: 100%;
      height: 100%;
  }

  .pagination {
    bottom:0;
    width: 100%;
    z-index: 2;
    position: absolute;
    text-align: center;
  }
  .swiper-pagination-switch {
    display: inline-block;
    width: 15px;
    height: 15px;
    border-radius: 10px;
    background: #FFF;
    margin: 0 5px;
    cursor: pointer;
  }

  .swiper-active-switch {
    background: rgb(47,193,194);
  }

  .swiper-container {
  	margin:0 auto;
  	position:relative;
  	overflow:hidden;
  	-webkit-backface-visibility:hidden;
  	-moz-backface-visibility:hidden;
  	-ms-backface-visibility:hidden;
  	-o-backface-visibility:hidden;
  	backface-visibility:hidden;
  	z-index:1;
  }
  .swiper-wrapper {
  	position:relative;
  	width:100%;
  	-webkit-transition-property:-webkit-transform, left, top;
  	-webkit-transition-duration:0s;
  	-webkit-transform:translate3d(0px,0,0);
  	-webkit-transition-timing-function:ease;

  	-moz-transition-property:-moz-transform, left, top;
  	-moz-transition-duration:0s;
  	-moz-transform:translate3d(0px,0,0);
  	-moz-transition-timing-function:ease;

  	-o-transition-property:-o-transform, left, top;
  	-o-transition-duration:0s;
  	-o-transform:translate3d(0px,0,0);
  	-o-transition-timing-function:ease;
  	-o-transform:translate(0px,0px);

  	-ms-transition-property:-ms-transform, left, top;
  	-ms-transition-duration:0s;
  	-ms-transform:translate3d(0px,0,0);
  	-ms-transition-timing-function:ease;

  	transition-property:transform, left, top;
  	transition-duration:0s;
  	transform:translate3d(0px,0,0);
  	transition-timing-function:ease;
  }
  .swiper-free-mode > .swiper-wrapper {
  	-webkit-transition-timing-function: ease-out;
  	-moz-transition-timing-function: ease-out;
  	-ms-transition-timing-function: ease-out;
  	-o-transition-timing-function: ease-out;
  	transition-timing-function: ease-out;
  	margin: 0 auto;
  }
  .swiper-slide {
  	float: left;
  }

  /* IE10 Windows Phone 8 Fixes */
  .swiper-wp8-horizontal {
  	-ms-touch-action: pan-y;
  }
  .swiper-wp8-vertical {
  	-ms-touch-action: pan-x;
  }

  @media (max-width: 768px){
    .swiper-pagination-switch {
      width: 8px;
      height: 8px;
    }

    .touch-slider .arrow-left, .touch-slider .arrow-right {
      width: 75px;
      height: 100%;
      font-size: 23px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

    .arrow-right{
      right: 0%;
    }

    .arrow-left{
      left: 0%;
    }
  }

  @media (max-width: 480px){

    .touch-slider .arrow-left, .touch-slider .arrow-right {
      width: 55px;
      height: 100%;
      font-size: 23px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

  }
