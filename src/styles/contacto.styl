/* contact */

.content_contact
  width 100%
  height auto
  padding 3vw 0 3vw 0
  background-color white
  display -webkit-box
  display flex
  -webkit-flex-direction row
  flex-direction row
  -webkit-justify-content center
  justify-content center
  align-items center

form
  width 25%

input[type="text"],input[type="tel"],input[type="email"]
  display block
  margin 0
  width 100%
  padding .6vw 0 .6vw 0
  font-size 18px
  appearance none
  box-shadow none
  border-radius none
  border 4px solid transparent
  color #2fc1c1
  -moz-border-image: -moz-linear-gradient(top left, #AED48A 0%, #30BFBF 100%);
  -webkit-border-image: -webkit-linear-gradient(top left, #AED48A 0%, #30BFBF 100%);
  border-image: linear-gradient(to bottom right, #AED48A 0%, #30BFBF 100%);
  border-image-slice: 1;

input[type="text"]:focus
  outline: none
  box-shadow: inset 1px 1px 2px 0 #c9c9c9

input[type="text"]:nth-child(4)
  display block
  margin 0
  width 100%
  padding 1.6vw 0 1.6vw 0
  font-size 18px
  appearance none
  box-shadow none
  border-radius none

input[type="text"]:focus
  outline none
  box-shadow inset 1px 1px 2px 0 #c9c9c9

.message_form
  margin 0
  width 100%
  height auto
  border 0
  margin 3vw 0 0 0
  padding 0vw 0 3vw 0

textarea
  outline none
  width 100%
  border 0
  margin 0
  padding 2% 0 0 .5%
  font-size 18px
  resize none
  border 4px solid transparent
  color #2fc1c1
  -moz-border-image: -moz-linear-gradient(top left, #AED48A 0%, #30BFBF 100%);
  -webkit-border-image: -webkit-linear-gradient(top left, #AED48A 0%, #30BFBF 100%);
  border-image: linear-gradient(to bottom right, #AED48A 0%, #30BFBF 100%);
  border-image-slice: 1;

textarea:focus
  outline none
  box-shadow inset 3px 3px 3px 0 #c9c9c9

input[type="submit"]
  float right
  display block
  margin 0
  width auto
  height auto
  padding 1vw 2vw
  background-color #2fc1c1
  color #fff
  font-size 16px
  border none
  margin-right -2.5%

input[type="submit"]:hover
  outline: none
  opacity .8

.info_contact
  color #2fc1c1
  margin-left 10%

p.info_text
  width 100%
  margin-top 0

.social_icon
  width 18%

::-webkit-input-placeholder
   color: #2fc1c1
   padding-left .5vw

:-moz-placeholder  /* Firefox 18- */
   color: #2fc1c1
   padding-left .5vw

::-moz-placeholder   /* Firefox 19+ */
   color: #2fc1c1
   padding-left .5vw

:-ms-input-placeholder
   color: #2fc1c1
   padding-left .5vw

 /* Google Maps API */
 .map
   width 100%
   height 30vw

 /* media queries */

@media (max-width 768px)
  .content_contact
    flex-direction column

  .info_contact
    margin 0
    padding-top 3vw

  form
    width 55%

  p
    font-size 16px

  .footer-top-left
    width 90%

@media (max-width 640px)

  form
    width 60%

  input[type="submit"]
    padding 2vw 2.5vw
    margin-right -2.5%

@media (max-width 480px)
  form
    width 65%

@media (max-width 320px)
  form
    width 70%
