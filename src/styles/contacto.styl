/* contact */

.content_contact
  width 60%
  height auto
  padding 3vw 0 3vw 0
  background-color white
  display -webkit-box
  display flex
  -webkit-flex-direction row
  flex-direction row
  -webkit-justify-content space-between
  justify-content space-between
  align-items center

form
  width 35%

input[type=tel], input[type=email], input[type=text]
    outline none

input[type=tel]:focus, input[type=email]:focus, input[type=text]:focus
  outline none
  box-shadow inset 3px 3px 3px 0 #c9c9c9

input[type="text"],input[type="tel"],input[type="email"]
  display block
  margin 0
  width 100%
  padding .6vw 1vw
  font-size 18px
  appearance none
  box-shadow none
  border-radius none
  border 4px solid transparent
  color #2fc1c1
  -moz-border-image: -moz-linear-gradient(top left, #AED48A 0%, #30BFBF 100%);
  -webkit-border-image: -webkit-linear-gradient(top left, #AED48A 0%, #30BFBF 100%);
  border-image: linear-gradient(to bottom right, #AED48A 0%, #30BFBF 100%);
  border-image-slice: 1;

input[type="text"]:focus
  outline: none
  box-shadow: inset 1px 1px 2px 0 #c9c9c9

input[type="text"]:nth-child(4)
  display block
  margin 0
  width 100%
  padding 1.6vw 0 1.6vw 0
  font-size 18px
  appearance none
  box-shadow none
  border-radius none

input[type="text"]:focus
  outline none
  box-shadow inset 1px 1px 2px 0 #c9c9c9

span.contact-text
  font-size 32px
  color rgb(156,209,145)

.message_form
  width 100%
  height auto
  border 0
  padding 0vw 0 0 0

textarea
  outline none
  width 100%
  border 0
  margin 0
  padding .6vw 1vw
  font-size 18px
  resize none
  border 4px solid transparent
  color #2fc1c1
  -moz-border-image: -moz-linear-gradient(top left, #AED48A 0%, #30BFBF 100%);
  -webkit-border-image: -webkit-linear-gradient(top left, #AED48A 0%, #30BFBF 100%);
  border-image: linear-gradient(to bottom right, #AED48A 0%, #30BFBF 100%);
  border-image-slice: 1;

textarea:focus
  outline none
  box-shadow inset 3px 3px 3px 0 #c9c9c9

input[type="submit"]
  float right
  display block
  margin 0
  width auto
  height auto
  padding 1vw 2vw
  background-color #2fc1c1
  color #fff
  font-size 16px
  border none
  margin-right -11.8%
  transition .4s

input[type="submit"]:hover
  outline: none
  opacity .8
  background-color rgb(157,200,145)

.info_contact
  color #2fc1c1

p.info_text
  width 100%
  margin-top 0

.social_icon
  width 18%

::-webkit-input-placeholder
   color: #2fc1c1
   padding-left .5vw

:-moz-placeholder  /* Firefox 18- */
   color: #2fc1c1
   padding-left .5vw

::-moz-placeholder   /* Firefox 19+ */
   color: #2fc1c1
   padding-left .5vw

:-ms-input-placeholder
   color: #2fc1c1
   padding-left .5vw

 /* Google Maps API */
 .map
   width 100%
   height 30vw

 /* media queries */
@media (min-width 1920px)
  p.info_text
    font-size 24px

@media (max-width 1920px)
   p.info_text
     font-size 24px

@media (max-width 1366px)
  p.info_text
    font-size 20px

@media (max-width 1024px)
  .content_contact
    width 75%

  p.info_text
    font-size 18px

@media (max-width 768px)
  .content_contact
    flex-direction column
    width 75%

  .info_contact
    margin 0
    padding-top 3vw

  form
    width 55%

  p
    font-size 16px

  .footer-top-left
    width 90%

  .map
    height 55vw

@media (max-width 640px)

  form
    width 65%

  input[type="submit"]
    padding 2vw 2.5vw
    margin-right -2.5%

  .map
    height 60vw

@media (max-width 480px)
  form
    width 75%

  .map
    height 65vw

@media (max-width 320px)
  form
    width 85%

  p
    font-size 14.3px

  .map
    height 70vw
