
.events-content
  font-size 16px
  padding 0
  width 70%
  text-align left

.event-elem
  display inline-block
  width 30%
  margin 0vw .5vw 3vw 0
  background-color rgb(242,242,242)

.event-title
  text-align left
  margin 0 1vw 0 1vw
  padding 1vw 0 1vw 0
  border-bottom solid 1px rgb(203,203,203)

.event-info
  text-align left
  display inline-block
  width 40%
  margin-top 1vw
  padding-bottom 1vw

.ver-mas
  float right
  background-color rgb(47,193,194)
  color #fff
  margin 5vw 2vw 1vw 0
  padding 15px .5px 15px .5px
  width 120px
  cursor pointer
  display inline-block
  text-align center

.ver-mas:hover
  opacity .8

.event-img img
  width 100%

.events-content:after
  display inline-block
  width 100%

  /* -- MEDIA QUERIES  -- */

/* 3 COL */
@media (min-width 1920px)
  .event-elem
    width 32%

@media (max-width 1920px)
  .event-elem
    width 32%

@media (max-width 1680px)
  .event-title span
    font-size 24px

  .event-info span
    font-size 22px

/* SINGLE COL */
@media (max-width: 768px)
  .event-elem
    width 75%

  .ver-mas
    margin 7vw 2vw 3vw 0
    padding 1.5vw .5vw 1.5vw .5vw

  .event-title span
    font-size 18px

  .event-info span
    font-size 16px

@media (max-width: 640px)
  .ver-mas
    margin 7vw 3vw 3vw 0

  .event-elem
    width 80%

@media (max-width: 480px)
  .event-elem
    width 90%

  .ver-mas
    margin 20vw 3vw 5vw 0
    width 100px
    padding 6px 0

  .event-info
    width 50%

@media (max-width: 320px)
  .event-elem
    width 100%

  .ver-mas
    margin 5vw 3vw 5vw 0
    padding 3vw .5vw 3vw .5vw
