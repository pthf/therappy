.popup-events
    display none
    flex-direction column
    justify-content flex-start
    align-items flex-start
    position absolute
    background rgba(230,230,230,1)
    width 60%
    margin 0 auto
    padding 0
    z-index 2

.popup-events-wrapper
    width 80%
    margin 0 auto

.popup-events-img
    width 100%
    height 100%
    text-align center

.popup-events-img img
    width auto
    height auto

@media (max-width 1440px)

  .popup-events-wrapper
    padding 1vw 0

@media (max-width 1024px)
  .popup-events
    width 75%

@media (max-width 768px)
  .popup-events
    height auto
    width 80%
    justify-content center

  .ver-mas.quien-button.event-button
    margin 0

  .popup-events-img
    width 100%
    height 100%
    text-align center

  .popup-events-img img
    width 100%

  .event-info-wrapper
    display: flex
    flex-direction row
    align-items center
    justify-content space-between

@media (max-width 640px)

  .popup-events-wrapper
    width 80%
    margin 0 auto
    padding 0
