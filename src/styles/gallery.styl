  justify-content center
  align-items center

.wrapper-b
  width 100%
  height auto
  display flex
  flex-direction row
  justify-content center
  align-items center
  margin-bottom 3vw


ul.grid-parent-b
  font-size  0
  list-style  none
  width  60%
  padding 0
  margin 0 auto

ul.grid-parent-b li
  display  inline-block
  width  33.3%

ul.grid-parent-b li img
  opacity  1
  width  99%

ul.grid-parent-b li.feature-b
  float  left
  width  33.3%

.container-b
  width 100%
  margin  0 auto
  height  22vw

.section-b
  width 100%
  position  absolute
  opacity  0
  transition  opacity 1s

.active-b
  opacity  1

.prev-b,.next-b
  position absolute
  color rgb(47,193,193)
  cursor pointer
  font-size 60px
