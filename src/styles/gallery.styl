.galeria-wrapper
  width 100%
  height auto
  display flex
  flex-direction column
  justify-content center
  align-items center

.wrapper
  width 100%
  height auto
  display flex
  flex-direction row
  justify-content center
  align-items center


ul.grid-parent
  font-size  0
  list-style  none
  width  60%
  padding 0
  margin 0 auto

ul.grid-parent li
  display  inline-block
  width  33.3%

ul.grid-parent li img
  opacity  1
  width  99%

ul.grid-parent li.feature
  float  left
  width  66.6%

.container
  width 100%
  margin  0 auto
  height  22vw

.section
  width 100%
  position  absolute
  opacity  0
  transition  opacity 1s

.active
  opacity  1

.prev,.next
  position absolute
  color rgb(47,193,193)
  cursor pointer
  font-size 60px
  z-index 9
  margin-top 6vw

.next:hover
  color black
  transition .5s
.prev:hover
  color black
  transition .5s

.next
  margin-left -11vw

.prev
  margin-left 10vw

li.two
  margin-bottom .5%


/*****  Slider two  ******/

.galeria-wrapper-b
  width 100%
  height auto
  display flex
