.next,.prev,.next-b,.prev-b
  -webkit-touch-callout: none; /* iOS Safari */
  -webkit-user-select: none;   /* Chrome/Safari/Opera */
  -khtml-user-select: none;    /* Konqueror */
  -moz-user-select: none;      /* Firefox */
  -ms-user-select: none;       /* Internet Explorer/Edge */
  user-select: none;           /* Non-prefixed version, currently

/* Firefox CSS */
@-moz-document url-prefix()
  .prev,.next
    margin-top -5vw
  .prev-b,.next-b
    margin-top -5vw

/********* RESPONSIVE MEDIA QUERIES ***********/

@media (max-width: 768px)
/* media queries responsive slide uno */
  ul.grid-parent,ul.grid-parent-b
    width 80%
  .next,.next-b
    margin-right 0
    margin-left -7vw
  .prev,.prev-b
    margin-left 2.5vw
    margin-right 0vw
  .next,.prev,.next-b,.prev-b
    margin-top 8vw
  .wrapper-b
    margin-bottom 10vw

@media (max-width: 480px)
  .next-b,.prev-b,.next,.prev
    font-size 42px

@media (max-width: 320px)
  .next-b,.prev-b,.next,.prev
    font-size 32px
  .prev,.prev-b
    margin-left 2vw
  .next,.next-b
    margin-right 0
    margin-left -8vw
