.galeria-wrapper
  width 100%
  height auto
  display flex
  flex-direction column
  justify-content center
  align-items center

.wrapper
  width 100%
  height auto
  display flex
  flex-direction row
  justify-content center
  align-items center

.lightbox
  display flex
  position fixed
  background-color: rgba(0, 0, 0, 0.8);
  z-index -10
  opacity 0
  width 100%
  height 100%

.img-container
  width 100%
  height 100%
  overflow auto
  margin auto
  position absolute
  top: 10%; left: 0; bottom: 0; right: 0;
  width 85%
  opacity 1
  z-index 8

.close-lightbox
  position absolute
  top 1.5%
  right 1.5%
  background-color rgb(47,193,194)
  color #fff
  padding 9px .5px
  width 40px
  font-size 17px
  cursor pointer
  display inline-block
  text-align center


.img-container img
  width 100%
  height auto
  margin 0 auto
  z-index 8
  opacity 1


ul.grid-parent
  font-size  0
  list-style  none
  width  60%
  padding 0
  margin 0 auto
  -moz-transform: scaleX(-1);
  -webkit-transform: scaleX(-1);
  -o-transform: scaleX(-1);
  transform: scaleX(-1);
  -ms-filter: fliph; /*IE*/
  filter: fliph; /*IE*/

ul.grid-parent li
  display  inline-block
  width  33.3%

ul.grid-parent li img
  opacity  1
  width  99%
  height auto
  cursor pointer
  -moz-transform: scaleX(-1);
  -webkit-transform: scaleX(-1);
  -o-transform: scaleX(-1);
  transform: scaleX(-1);
  -ms-filter: fliph; /*IE*/
  filter: fliph; /*IE*/

ul.grid-parent li.feature
  float  right
  width  66.6%

.container
  width 100%
  margin  0 auto
  height  22vw

.section
  width 100%
  position  absolute
  opacity  0
  transition  opacity 1s
  z-index 1

.active
  opacity  1
  z-index 2

.prev,.next
  position absolute
  color rgb(47,193,193)
  cursor pointer
  font-size 60px
  z-index 3
  margin-top 6vw

.next:hover
  color rgb(182,215,130)
  transition .5s
.prev:hover
  color rgb(182,215,130)
  transition .5s

.next
  margin-left -11vw

.prev
  margin-left 10vw

li.two
  margin-bottom .5%


/*****  Slider two  ******/

.galeria-wrapper-b
  width 100%
  height auto
  display flex
  flex-direction column
  justify-content center
  align-items center

.wrapper-b
  width 100%
  height auto
  display flex
  flex-direction row
  justify-content center
  align-items center
  margin-bottom 3vw

ul.grid-parent-b
  font-size  0
  list-style  none
  width  60%
  padding 0
  margin 0 auto

ul.grid-parent-b li
  display  inline-block
  width  33.3%

ul.grid-parent-b li img
  opacity  1
  width  99%

ul.grid-parent-b li.feature-b
  float  right
  width  33.3%

.container-b
  width 100%
  margin  0 auto
  height  22vw

.section-b
  width 100%
  position  absolute
  opacity  0
  z-index 1
  transition  opacity 1s

.active-b
  opacity  1
  z-index 2

.prev-b,.next-b
  position absolute
  color rgb(47,193,193)
  cursor pointer
  font-size 60px
  z-index 3
  margin-top 6vw

.next-b:hover
  color black
  transition .5s
.prev-b:hover
  color black
  transition .5s

.next-b
  margin-left -11vw

.prev-b
  margin-left 10vw

li.two-b
  margin-bottom .5%

.next,.prev,.next-b,.prev-b
  -webkit-touch-callout: none; /* iOS Safari */
  -webkit-user-select: none;   /* Chrome/Safari/Opera */
  -khtml-user-select: none;    /* Konqueror */
  -moz-user-select: none;      /* Firefox */
  -ms-user-select: none;       /* Internet Explorer/Edge */
  user-select: none;           /* Non-prefixed version, currently */

/* Firefox CSS */
@-moz-document url-prefix()
  .prev,.next
    margin-top -5vw
  .prev-b,.next-b
    margin-top -5vw

/********* RESPONSIVE MEDIA QUERIES ***********/

@media (max-width: 768px)
/* media queries responsive slide uno */
  ul.grid-parent,ul.grid-parent-b
    width 80%
  .next,.next-b
    margin-right 0
    margin-left -8vw
  .prev,.prev-b
    margin-left 2.5vw
    margin-right 0vw
  .next,.prev,.next-b,.prev-b
    margin-top 8vw
  .wrapper-b
    margin-bottom 10vw

  .img-container
    top: 50%; left: 0; bottom: 0; right: 0;

@media (max-width: 640px)

  .prev, .prev-b
    margin-left 0
    margin-right 0

  .next, .next-b
    margin-right 0
    margin-left -9.5vw

@media (max-width: 480px)
  .next-b,.prev-b,.next,.prev
    font-size 42px

  .prev, .prev-b
    margin-left 0
    margin-right 0

  .next, .next-b
    margin-right 0
    margin-left -8vw

@media (max-width: 320px)
  .next-b,.prev-b,.next,.prev
    font-size 32px
  .prev,.prev-b
    margin-left 1vw
  .next,.next-b
    margin-right 0
    margin-left -8vw
