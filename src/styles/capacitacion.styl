.capacitacion
  width 100%
  height auto
  padding 5vw 0 5vw 0
  display flex
  flex-wrap nowrap
  flex-direction column
  justify-content space-around
  align-items center

.bar-cap
  width 60%
  height auto
  margin .5vw 0 0vw 0
  display flex
  flex-wrap nowrap
  flex-direction row
  justify-content space-between
  align-items space-between
  color white
  cursor pointer
  background-image: -o-linear-gradient(right, #AED48A 0%, #30BFBF 100%);
  background-image: -moz-linear-gradient(right, #AED48A 0%, #30BFBF 100%);
  background-image: -webkit-linear-gradient(right, #AED48A 0%, #30BFBF 100%);
  background-image: -ms-linear-gradient(right, #AED48A 0%, #30BFBF 100%);
  background-image: linear-gradient(to right, #AED48A 0%, #30BFBF 100%);


span.arrow-cap
  padding 2vw 1vw 2vw 0
  line-height 2vw
  font-size 28px
  font-weight bold

span.title-cap
  padding 2vw 0 2vw 1vw
  line-height 2vw
  font-size 24px
  font-weight bold

span.no-bold
  font-weight 100

.cap-content
  background-image none
  background-color black
  display block
  box-shadow: 0px 5px 10px 1px rgba(0,0,0,0.75);

p.info-cap
  width 90%
  text-align left
  margin 3% 5% 0 5%

div.close-info
  background-color white
  color blue
  padding 1vw 2vw 1vw 2vw
  margin 3vw
  margin-top 1vw
  width 12%
  text-align center
  color rgb(47,193,193)
  float right

@media (min-width 1680px)
  span.title-cap
    font-size 42px

  p.info-cap
    font-size 28px

  div.close-info
    font-size 26px

@media (max-width 1280px)
  div.close-info
    width 17%

@media (max-width 1024px)
  .bar-cap
    width 65%

  span.arrow-cap
    font-size 26.5px

  span.title-cap
    font-size 22.5px

@media (max-width 768px)
  .bar-cap
    width 75%

  span.arrow-cap
    font-size 25.5px
    padding 3vw 1vw 3vw 0vw

  span.title-cap
    font-size 21.5px
    padding 3vw 0 3vw 1vw

  .close-info
    width 16%
    font-size 15px
    padding 2vw 3vw


@media (max-width 640px)
  .bar-cap
    width 80%

  span.arrow-cap
    font-size 24px
    padding 3.5vw 1vw 3.5vw 0vw

  span.title-cap
    font-size 20px
    padding 3.5vw 0 3.5vw 1vw

  div.close-info
    width 20%

@media (max-width 480px)
  .bar-cap
    width 85%

  span.arrow-cap
    font-size 22px
    padding 4vw 1vw 4vw 0vw

  span.title-cap
    font-size 14px
    padding 4vw 0 4vw 1vw

  div.close-info
    padding 2vw 2vw
    width 30%

@media (max-width 320px)
  span.arrow-cap
    font-size 20px

  span.title-cap
    font-size 13px

  div.close-info
    width 32%
    margin 5vw 3vw 3vw
