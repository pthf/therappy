.popup-services
    display none
    flex-direction column
    justify-content center
    background rgba(230,230,230,1)
    width 100%
    height auto
    margin 0 auto
    padding 1vw 0 2vw 0
    z-index 2
    position relative
    transition 0.15s ease-out;

.popup-services-wrapper
    width 80%
    margin 0 auto
    display flex
    flex-direction column
    justify-content center
    align-items flex-start

h3
  font-size 2em

p.popup-services-content
    font-size 20px

@media (max-width: 1366px)

  p.popup-services-content
    font-size 18px

@media (max-width: 1280px)

  p.popup-services-content
    font-size 16px

@media (max-width: 1024px)
  .popup-services
    width 100%

@media (max-width: 768px)
  .popup-services
    width 100%
    padding 0 0 0 0

  p.popup-services-content
    font-size 14px

@media (max-width: 640px)

  h3
    font-size 1.8em

  .services-elem span b
    font-size 14px


@media (max-width: 480px)

  h3
    font-size 1.2em
